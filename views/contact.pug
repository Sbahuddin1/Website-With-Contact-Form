extends base.pug

block scripts
    script(src="/static/script.js")
    
block style  
    style
      include ../static/style.css
      include ../static/contact.css
      
block content
    section#contact1 
      div#a1
        h1 Contact Us Now! <br> We are here to help
        p Lorem ipsum dolor sit amet consectetur adipisicing elit. A recusandae tenetur autem. Reiciendis id incidunt libero explicabo earum nobis blanditiis. Molestiae incidunt sapiente mollitia voluptates commodi obcaecati delectus vero voluptate.
        a(href="/") Learn more >

      div#a2
        img(src="/static/pics/contact.jpg", alt="")  

    section#form
        h1 Contact Us
        p This information will help us reach out to you. None of this information will be provided to third parties.    

        form(action="/contact", method='post', onsubmit="show_alert()")
            label(for="name") Name
            input(type="text", class='inputs', name='Name', placeholder='Your Name')

            label(for="Email") Email
            input(type="email", class='inputs', name='Email', placeholder='Your Email')

            label(for="Phone") Phone
            input(type="phone", class='inputs', name='Phone', placeholder='Your Phone Number')

            label(for="Subject") Subject
            input(type="text", class='inputs', name='Subject', placeholder='Subject')

            label(for="Message") Message
            textarea(placeholder="You can help us understand more about the subject",name="Message", cols="30", rows="12")
            
            button Submit